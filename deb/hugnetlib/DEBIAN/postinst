#!/bin/sh

. /usr/share/debconf/confmodule

export PATH=$PATH:/sbin:/usr/sbin:/bin:/usr/bin

db_get hugnetlib/mysql_db
MYSQLDB=${RET}
db_get hugnetlib/mysql_root_user
MYSQLUSER=${RET}
db_get hugnetlib/mysql_root_pw
MYSQLPW=${RET}

mysql -f -u ${MYSQLUSER} -p"${MYSQLPW}" --database=${MYSQLDB} < /usr/share/HUGnetLib/sql/mysql/0.10.0/renamesensors.sql > /dev/null 2>&1 || true
mysql -f -u ${MYSQLUSER} -p"${MYSQLPW}" --database=${MYSQLDB} < /usr/share/HUGnetLib/sql/mysql/0.10.0/updatehistory.sql > /dev/null 2>&1 || true
mysql -f -u ${MYSQLUSER} -p"${MYSQLPW}" --database=${MYSQLDB} < /usr/share/HUGnetLib/sql/mysql/0.10.0/alterdevices.sql > /dev/null 2>&1 || true

exit $?
